{
  "Tests": [
    {
      "Convey": "0. Initial call to getProfileSpecs produces empty array",
      "Zome": "personas",
      "FnName": "getPersonas",
      "Input": {},
      "Output": []
    },
    {
      "Convey": "1. Can add a persona with a valid spec",
      "Zome": "personas",
      "FnName": "createPersona",
      "Input": {"name": "testPersona", "id": "xyz"},
      "Output": "%h1%"
    },
    {
      "Convey": "2. Trying to add a persona with an invalid spec returns an error",
      "Zome": "personas",
      "FnName": "createPersona",
      "Input": {"fail": "testPersona", "id": "xyz"},
      "RegExp": "Validation Failed: validator persona failed: object property 'name' is required"
    },
    {
      "Convey": "3. Can retrieve the added persona",
      "Zome": "personas",
      "FnName": "getPersonas",
      "Input": {},
      "Output": [{"name": "testPersona", "id": "xyz", "fields":[], "hash": "%h1%"}]
    },
    {
      "Convey": "4. Can add a field to the persona",
      "Zome": "personas",
      "FnName": "addField",
      "Input": {"personaHash" : "%h1%", "field": {"name" : "First Name", "data": "Willem"}},
      "Output": true
    },
    {
      "Convey": "5. Can see the added field when retrieving persona",
      "Zome": "personas",
      "FnName": "getPersonas",
      "Input": {},
      "Output": [{"name": "testPersona", "id": "xyz", "fields":[{"name" : "First Name", "data": "Willem"}], "hash": "%h3%"}]
    }
  ]
}
